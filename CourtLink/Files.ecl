import versioncontrol;
export Files(string pversion = '') := module

   //////////////////////////////////////////////////////////////////
   // -- Input File Versions
   //////////////////////////////////////////////////////////////////
   versioncontrol.macInputFileVersions(Filenames(pversion).input, layouts.Input.Sprayed, Input,'CSV',,'\n','\t',,400000);
   
   //////////////////////////////////////////////////////////////////
   // -- Base File Versions
   //////////////////////////////////////////////////////////////////
   versioncontrol.macBuildFileVersions(Filenames(pversion).Base, layouts.Base, Base);
end;